<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">

    <TextView
        android:text="I am willing to provide..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtProvide"
        android:textSize="30sp"
        android:textColor="@color/common_google_signin_btn_text_light_focused"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/txtNerve"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAlignment="center" />

    <Button
        android:text="Jobs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnCompanyJob"
        android:onClick="companyJob"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/txtProvide"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:text="Services"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnCompanyServices"
        android:onClick="companyServices"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/btnCompanyJob"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/btnCompanyJob"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/btnCompanyJob" />

    <Button
        android:text="Food"
        android:layout_width="0dp"
        android:layout_height="51dp"
        android:id="@+id/btnCompanyFood"
        android:onClick="companyFood"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="11dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/btnCompanyServices"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:text="nerve."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtNerve"
        android:textSize="70sp"
        android:fontFamily="cursive"
        android:textColor="@color/colorPrimary"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="24dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>