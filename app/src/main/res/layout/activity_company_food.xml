<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_company_service"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.taylorcampos.hacknyfinal.CompanyServiceActivity">

    <TextView
        android:text="Donate Food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtCompanyService"
        android:textSize="30sp"
        android:textColor="@color/colorPrimary"
        android:fontFamily="serif-monospace"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:layout_width="332dp"
        android:layout_height="38dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editCompanyName2"
        android:hint="Company Name..."
        android:fontFamily="monospace"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/editCompanyDate2"
        android:layout_marginTop="59dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="62dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editCompanyQuan" />

    <EditText
        android:layout_width="149dp"
        android:layout_height="51dp"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/editCompanyTime2"
        android:hint="00:00"
        android:fontFamily="monospace"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/editCompLocFood"
        android:layout_marginEnd="30dp"
        app:layout_constraintRight_toRightOf="@+id/editCompanyName2"
        android:layout_marginBottom="20dp" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editCompanyDate2"
        android:hint="mm/dd/yy"
        android:fontFamily="monospace"
        app:layout_constraintRight_toLeftOf="@+id/editCompanyTime2"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/editCompanyTime2"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="1dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editCompanyTime2" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editCompDescription2"
        android:hint="Additional Description "
        android:gravity="top"
        android:fontFamily="monospace"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/btnFoodPost"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/editCompLocFood"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="12dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="57dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editCompanyFoodType"
        android:hint="Type of Food"
        android:fontFamily="monospace"
        app:layout_constraintRight_toLeftOf="@+id/editCompanyQuan"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="24dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/editCompanyQuan" />

    <EditText
        android:layout_width="129dp"
        android:layout_height="53dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editCompanyQuan"
        android:hint="quantity"
        android:fontFamily="monospace"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="5dp"
        app:layout_constraintRight_toRightOf="@+id/editCompanyName2"
        android:layout_marginTop="96dp"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/editCompLocFood"
        android:hint="Enter Location"
        android:fontFamily="monospace"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/btnFoodPost"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="127dp"
        app:layout_constraintTop_toBottomOf="@+id/editCompanyQuan"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="128dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.45" />

    <Button
        android:text="Post"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnFoodPost"
        android:onClick="postFood"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
