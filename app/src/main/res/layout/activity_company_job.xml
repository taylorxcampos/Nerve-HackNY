<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_company_service"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.taylorcampos.hacknyfinal.CompanyServiceActivity">

    <TextView
        android:text="Offer a Job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtCompPost"
        android:textSize="30sp"
        android:textColor="@color/colorPrimary"
        android:fontFamily="serif-monospace"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="24dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editCompanyName3"
        android:hint="Company Name..."
        android:fontFamily="monospace"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/editCompDescription3"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="129dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="131dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editCompDescription3"
        android:hint="Additional Description "
        android:gravity="top"
        android:fontFamily="monospace"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/btnJobPost"
        app:layout_constraintRight_toRightOf="@+id/editCompanyName3"
        android:layout_marginTop="55dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="52dp"
        app:layout_constraintLeft_toLeftOf="@+id/editCompanyName3"
        app:layout_constraintTop_toTopOf="@+id/editCompPartorFull" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/editCompLocJob"
        android:hint="Enter Job Location"
        android:fontFamily="monospace"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/editCompPartorFull"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/editCompanyName3"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editJobTitle"
        android:hint="Job Title"
        android:fontFamily="monospace"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="27dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/txtCompPost"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/editCompanyName3"
        android:layout_marginBottom="8dp" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editCompPartorFull"
        android:hint="Part-Time or Full-Time?"
        android:fontFamily="monospace"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="22dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="208dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:text="Post"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnJobPost"
        android:onClick="postJob"
        android:fontFamily="monospace"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="28dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="13dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
