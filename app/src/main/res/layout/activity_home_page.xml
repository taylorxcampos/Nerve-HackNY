<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.taylorcampos.hacknyfinal.HomePageActivity">

    <Button
        android:text="i could use help"
        android:layout_height="wrap_content"
        android:id="@+id/btnNeedHelp"
        android:layout_width="150dp"
        android:onClick="needClick"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="36dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnWant"
        tools:layout_constraintBaseline_creator="1" />

    <Button
        android:text="I want to help"
        android:layout_height="wrap_content"
        android:id="@+id/btnWant"
        android:layout_width="150dp"
        android:onClick="wantClick"
        app:layout_constraintRight_toLeftOf="@+id/btnNeedHelp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="11dp"
        android:layout_marginTop="65dp"
        app:layout_constraintTop_toBottomOf="@+id/txtNerveSay"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:text="nerve."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtNerve"
        android:textSize="70sp"
        android:fontFamily="cursive"
        android:textColor="@color/colorPrimary"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/txtNerveSay"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="35dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:text="anything is possible if you have enough nerve."
        android:layout_width="0dp"
        android:layout_height="22dp"
        android:id="@+id/txtNerveSay"
        android:textAlignment="center"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="31dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="177dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="made with love at HackNY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtMadeWith"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="16dp" />

    <TextView
        android:text="be bold, be brave, make a difference"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:id="@+id/txtbold"
        android:textAlignment="center"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/btnNeedHelp"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="31dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="95dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="94dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtNerve" />
</android.support.constraint.ConstraintLayout>
